<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/id_aty_setting_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/setting_name_et_bg"
        android:textCursorDrawable="@drawable/cursor_bg_1"/>
    <View
        android:layout_below="@+id/id_aty_setting_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/id_aty_setting_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SAVE"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
