<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_shake_accept_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colormain">
        <RelativeLayout
            android:id="@+id/id_shake_accept_back_ly"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/ic_back"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/id_shake_accept_vertical_line"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_toRightOf="@+id/id_shake_accept_back_ly"
            android:background="@color/colorwhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_shake_accept_vertical_line"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"
            android:text="活动详情"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_shake_accept_detail"
        android:layout_below="@+id/id_shake_accept_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/id_shake_accept_detail_address"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/id_shake_accept_address_tip"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_place"/>
            <TextView
                android:id="@+id/id_shake_accept_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/id_shake_accept_address_tip"
                android:layout_centerVertical="true"
                android:text="南京邮电大学"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_shake_accept_detail_time"
            android:layout_below="@+id/id_shake_accept_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_shake_accept_time_tip"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:src="@mipmap/ic_access_time"/>
            <TextView
                android:id="@+id/id_shake_accept_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/id_shake_accept_time_tip"
                android:layout_centerVertical="true"
                android:text="2016-09-30"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/id_shake_accept_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/id_shake_accept_bt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colormain"
            android:text="接受"
            android:textSize="5dp"/>
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/id_shake_refuse_bt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@color/colormain"
            android:text="拒绝"
            android:textSize="5dp"/>
    </RelativeLayout>
</RelativeLayout>
