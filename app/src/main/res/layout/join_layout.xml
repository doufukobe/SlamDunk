<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/commen_title_bar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/join_top_img"
                android:src="@mipmap/join_top"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colormain">

                <TextView
                    android:id="@+id/join_actname"
                    android:layout_alignParentLeft="true"
                    android:textSize="22dp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/join_distance"
                    android:layout_alignParentRight="true"
                    android:textSize="16dp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="12dp"/>

                <TextView
                    android:id="@+id/join_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/colorwhite"
                    android:textSize="14dp"

                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="240dp"
                   />

                <TextView
                    android:id="@+id/join_act"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="16dp"
                    android:textColor="@color/colorwhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请加入"
                    android:layout_margin="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/address_layout">

                <ImageView
                    android:id="@+id/place_tip"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_place"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"/>


                <TextView
                    android:id="@+id/join_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/place_tip"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxWidth="280dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <ImageView
                    android:id="@+id/place_tip"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_access_time"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"/>


                <TextView
                    android:id="@+id/join_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/place_tip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp"
                   />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

                <ImageView
                    android:id="@+id/place_tip"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_people"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"/>


                <TextView
                    android:id="@+id/join_memberinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/place_tip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/information_tip"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_tip"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/join_hasball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/information_tip"
                    android:layout_alignBottom="@+id/information_tip"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/act_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/join_hasball"
                    android:layout_marginRight="12dp"
                    android:textSize="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/join_hasball"
                    />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>