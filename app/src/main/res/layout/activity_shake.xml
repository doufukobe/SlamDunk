<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_shake_anim_ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_laucher"/>
    <RelativeLayout
        android:id="@+id/id_shake_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colormain">
        <RelativeLayout
            android:id="@+id/id_shake_back_ly"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/ic_back"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/id_shake_vertical_line"
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_toRightOf="@+id/id_shake_back_ly"
            android:background="@color/colorwhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_shake_vertical_line"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"
            android:text=""/>

        <TextView
            android:id="@+id/id_bt_start"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="快速开始"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorwhite"
            android:textSize="18sp"
            android:gravity="center_vertical|right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/id_shake_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/id_shake_choose"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="有活动等待创建"
                android:textSize="6dp"/>
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/id_shake_accept"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/id_shake_choose"
                android:layout_marginTop="20dp"
                android:text="有活动等待接受"
                android:textSize="6dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
