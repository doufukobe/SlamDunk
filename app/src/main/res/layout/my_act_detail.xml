<?xml version="1.0" encoding="utf-8"?>
<com.fpd.basecore.util.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_act_scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/commen_title_bar"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/my_act_detail_img"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/act_detail04"/>


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:background="@drawable/my_act_detail_bk">

                <TextView
                    android:id="@+id/my_act_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/my_act_detail_address"
                    android:layout_below="@+id/my_act_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/my_act_detail_time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""/>

                <TextView
                    android:id="@+id/my_act_detail_member"
                    android:layout_below="@+id/my_act_detail_time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorwhite"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""/>

            </RelativeLayout>
        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_act_detail_heads"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@color/colorwhite"
            >

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/colorwhite">

            <TextView
                android:id="@+id/my_act_detail_tip"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动详情"/>

            <TextView
                android:id="@+id/my_act_detail_introduce"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="" />

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/my_act_detail_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colormain"
                android:text="退 出 活 动"></com.gc.materialdesign.views.ButtonRectangle>
        </LinearLayout>
    </LinearLayout>

</com.fpd.basecore.util.MyScrollView>